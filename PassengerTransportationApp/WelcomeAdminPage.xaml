<Page x:Class="PassengerTransportationApp.WelcomeAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PassengerTransportationApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добро пожаловать" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="WelcomeText" FontSize="25" Margin="10" VerticalAlignment="Center" TextAlignment="Center" Grid.Row="0">
            Добро пожаловать
        </TextBlock>
        <TextBlock x:Name="InfoText" TextWrapping="Wrap" FontSize="20" Margin="20" TextAlignment="Center" Grid.Row="1">
            Это приложение для управления базой данных пассажирских перевозок.
            <LineBreak/>
            <LineBreak/>
            Вы вошли под именем администратора и можете вносить изменения в базу.
        </TextBlock>
    </Grid>
</Page>
