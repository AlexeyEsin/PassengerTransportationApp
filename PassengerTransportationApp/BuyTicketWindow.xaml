<Window x:Class="PassengerTransportationApp.BuyTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassengerTransportationApp"
        mc:Ignorable="d"
        Title="BuyTicketWindow" Height="420" Width="490" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Label Name="LastNameLabel" Content="Фамилия:" Grid.Row="1" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="FirstNameLabel" Content="Имя:" Grid.Row="3" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="MiddleNameLabel" Content="Отчество (при наличии):" Grid.Row="5" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="PassportLabel" Content="Серия и номер паспорта:" Grid.Row="7" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="BirthDateLabel" Content="Дата рождения:" Grid.Row="9" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="SeatNumberLabel" Content="Место в автобусе:" Grid.Row="11" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="ArrivalPointLabel" Content="Своё место прибытия:" Grid.Row="13" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center"/>
        <Label Name="ErrorLabel" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="2" FontSize="16" Foreground="Red" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Name="LastNameTextBox" Grid.Row="1" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center"/>
        <TextBox Name="FirstNameTextBox" Grid.Row="3" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center"/>
        <TextBox Name="MiddleNameTextBox" Grid.Row="5" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center"/>
        <TextBox Name="PassportTextBox" Grid.Row="7" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center" PreviewTextInput="Passport_PreviewTextInput"/>
        <DatePicker Name="BirthDatePicker" Grid.Row="9" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center"/>
        <TextBox Name="SeatNumberTextBox" Grid.Row="11" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center" PreviewTextInput="SeatNumber_PreviewTextInput"/>
        <TextBox Name="ArrivalPointTextBox" Grid.Row="13" Grid.Column="2" FontSize="16" VerticalContentAlignment="Center"/>
        <Button Name="AddButton" MaxWidth="120" Content="Купить билет" Grid.Row="17" Grid.ColumnSpan="4" Click="BuyButton_Click" FontSize="16"/>
    </Grid>
</Window>
